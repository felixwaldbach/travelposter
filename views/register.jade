extends layout

block content
    h1= title
    p Welcome to #{title}

    div
        form(action='/api/user/register',method='post')
            div(data-role='fieldcontain')
                fieldset(data-role='controlgroup')
                    label(for='name') username
                        input(id='name',type='text',value='',placeholder='@',name='name')
            div(data-role='fieldcontain')
                fieldset(data-role='controlgroup')
                    label(for='email' pattern="[a-zA-Z0-9!#$%&'*+\\/=?^_`{|}~.-]+@[a-zA-Z0-9-]+(\\.[a-zA-Z0-9-]+)*") email
                        input(id='email',type='text',value='',placeholder='@',name='email')
            div(data-role='fieldcontain')
                fieldset(data-role='controlgroup')
                    label(for='password') password
                        input(id='password',type='password',value='',placeholder='',name='password')
            div(data-role='fieldcontain')
                input(type='submit',value='Register',data-transition='fade', data-theme='c')
